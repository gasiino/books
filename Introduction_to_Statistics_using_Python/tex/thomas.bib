}

@ARTICLE{Aw1996,
  author = {S. T. Aw and G. M. Halmagyi and T. Haslwanter and I. S. Curthoys
	and R. A. Yavor and M. J. Todd},
  title = {Three-dimensional vector analysis of the human vestibuloocular reflex
	in response to high-acceleration head rotations. II. responses in
